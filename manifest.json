{
  "manifest_version": 2,
  "name": "Twitch Stream I Follow",
  "version": "0.0.1",
  "description": "Show twitch streamers on live I follow",
  "permissions": [
    "storage",
    "alarms",
    "tabs",
    "notifications"
  ],
  "browser_action": {
    "default_icon": "/images/icon_16.png",
    "default_popup": "popup.html"
  },
  "options_page": "option.html",
  "background": {
    "scripts": [
      "/scripts/background.js",
      "/scripts/storage.js",
      "/scripts/constants.js"
    ],
    "persistent": false
  },
  "icons": {
    "16": "/images/icon_16.png",
    "48": "/images/icon_48.png",
    "128": "/images/icon_128.png"
  },
  "web_accessible_resources": [
    "images/*.png",
    "option.html"
  ]
}
